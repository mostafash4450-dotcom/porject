---
import MainLayout from '../layouts/MainLayout.astro';
import { trustedLawFirms } from '../data/scamCompanies';

const title = "مكاتب محاماة موثوقة";
const description = "قائمة شاملة بمكاتب المحاماة الموثوقة المتخصصة في استرجاع أموال الفوركس";
---

<MainLayout title={title} description={description}>
  <div class="min-h-screen bg-gray-50 py-16 px-4">
    <div class="max-w-6xl mx-auto">
      <h1 class="text-4xl font-bold mb-4">مكاتب محاماة موثوقة</h1>
      <p class="text-xl text-gray-600 mb-12">قائمة شاملة بمكاتب المحاماة الموثوقة المتخصصة في استرجاع أموال الفوركس</p>

      <div class="overflow-x-auto">
        <table class="w-full bg-white rounded-lg shadow">
          <thead class="bg-blue-900 text-white">
            <tr>
              <th class="px-6 py-4 text-right">اسم مكتب المحاماة</th>
              <th class="px-6 py-4 text-right">موقع المكتب</th>
              <th class="px-6 py-4 text-right">التقييم</th>
              <th class="px-6 py-4 text-right">عدد القضايا المنجزة</th>
              <th class="px-6 py-4 text-right">التفاصيل</th>
            </tr>
          </thead>
          <tbody>
            {trustedLawFirms.map((firm) => (
              <tr class="border-b hover:bg-blue-50 transition-colors">
                <td class="px-6 py-4 font-semibold">{firm.name}</td>
                <td class="px-6 py-4">{firm.location}</td>
                <td class="px-6 py-4">
                  <div class="flex items-center gap-1">
                    {[...Array(firm.rating)].map(() => (
                      <svg xmlns="http://www.w3.org/2000/svg" stroke-width="2" width="24" height="24" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" fill="none" viewBox="0 0 24 24" class="w-4 h-4 fill-yellow-400 text-yellow-400">
                        <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
                      </svg>
                    ))}
                  </div>
                </td>
                <td class="px-6 py-4">{firm.casesCompleted.toLocaleString()}</td>
                <td class="px-6 py-4">
                  <a href={`/law-firm/${firm.id}`} class="text-blue-600 hover:text-blue-700 font-medium">
                    عرض الملف الشخصي
                  </a>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</MainLayout>
