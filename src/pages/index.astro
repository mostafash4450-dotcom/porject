---
import MainLayout from '../layouts/MainLayout.astro';
import { scamCompanies, trustedLawFirms, untrustedLawFirms } from '../data/scamCompanies';
import { articles } from '../data/articles';

const title = "صياد الاحتيال - الموقع الأول للتحذير من شركات الاحتيال";
const description = "موقع صياد الاحتيال هو أول موقع للتحذير من شركات الاحتيال في منطقة الشرق الأوسط، يقدم معلومات دقيقة وموثقة عن شركات التداول النصابة ومكاتب المحاماة المشبوهة";
---

<MainLayout title={title} description={description}>
  <section class="relative h-[500px] bg-gradient-to-r from-blue-900 to-blue-800 flex items-center justify-center text-white">
    <div class="absolute inset-0">
      <img
        src="https://images.unsplash.com/photo-1486406146926-c627a92ad1ab?auto=format&fit=crop&w=2000&q=80"
        alt="صورة المدينة"
        class="w-full h-full object-cover opacity-20"
      />
    </div>
    <div class="relative z-10 max-w-4xl mx-auto text-center px-4">
      <h1 class="text-4xl md:text-5xl font-bold mb-6">صياد الاحتيال</h1>
      <p class="text-xl mb-8">
        موقع صياد الاحتيال هو أول موقع للتحذير من شركات الاحتيال في منطقة الشرق الأوسط
        يقدم معلومات دقيقة وأمان واستثمار وتوفير أفضل الشركات والمعلومات للمستخدمين
      </p>

      <div class="flex items-center justify-center max-w-2xl mx-auto">
        <div class="relative w-full max-w-2xl">
          <div class="flex items-center">
            <button class="bg-blue-600 hover:bg-blue-700 px-8 py-4 rounded-r-lg">
              <svg xmlns="http://www.w3.org/2000/svg" stroke-width="2" width="24" height="24" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" fill="none" viewBox="0 0 24 24" class="w-5 h-5 text-white">
                <circle cx="11" cy="11" r="8"></circle>
                <path d="m21 21-4.3-4.3"></path>
              </svg>
            </button>
            <input
              type="text"
              id="hero-search-input"
              placeholder="ابحث عن الشركات..."
              class="w-full px-6 py-4 rounded-l-lg text-gray-900 focus:outline-none text-right"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Links Section -->
  <section class="py-16 px-4 bg-white">
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <a href="/trading-warnings" class="bg-blue-50 p-6 rounded-lg text-center hover:bg-blue-100 transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" stroke-width="2" width="24" height="24" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" fill="none" viewBox="0 0 24 24" class="w-12 h-12 mx-auto mb-4 text-blue-600">
            <path d="m21.73 18-8-14a2 2 0 0 0-3.48 0l-8 14A2 2 0 0 0 4 21h16a2 2 0 0 0 1.73-3"></path>
            <path d="M12 9v4"></path>
            <path d="M12 17h.01"></path>
          </svg>
          <h3 class="text-lg font-semibold mb-2">أحدث التحذيرات من شركات التداول</h3>
          <p class="text-gray-600 mb-4">تحذيرات مهمة عن شركات مشبوهة</p>
          <button class="text-blue-600 hover:text-blue-700 font-medium">عرض المزيد</button>
        </a>

        <a href="/forex-advice" class="bg-blue-50 p-6 rounded-lg text-center hover:bg-blue-100 transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" stroke-width="2" width="24" height="24" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" fill="none" viewBox="0 0 24 24" class="w-12 h-12 mx-auto mb-4 text-blue-600">
            <path d="m16 16 3-8 3 8c-.87.65-1.92 1-3 1s-2.13-.35-3-1Z"></path>
            <path d="m2 16 3-8 3 8c-.87.65-1.92 1-3 1s-2.13-.35-3-1Z"></path>
            <path d="M7 21h10"></path>
            <path d="M12 3v18"></path>
            <path d="M3 7h2c2 0 5-1 7-2 2 1 5 2 7 2h2"></path>
          </svg>
          <h3 class="text-lg font-semibold mb-2">مقالات ونصائح حول شركات الفوركس</h3>
          <p class="text-gray-600 mb-4">معلومات قيمة للمستثمرين</p>
          <button class="text-blue-600 hover:text-blue-700 font-medium">عرض المزيد</button>
        </a>

        <a href="/trusted-law-firms" class="bg-blue-50 p-6 rounded-lg text-center hover:bg-blue-100 transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" stroke-width="2" width="24" height="24" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" fill="none" viewBox="0 0 24 24" class="w-12 h-12 mx-auto mb-4 text-blue-600">
            <rect width="16" height="20" x="4" y="2" rx="2" ry="2"></rect>
            <path d="M9 22v-4h6v4"></path>
            <path d="M8 6h.01"></path>
            <path d="M16 6h.01"></path>
            <path d="M12 6h.01"></path>
            <path d="M12 10h.01"></path>
            <path d="M12 14h.01"></path>
            <path d="M16 10h.01"></path>
            <path d="M16 14h.01"></path>
            <path d="M8 10h.01"></path>
            <path d="M8 14h.01"></path>
          </svg>
          <h3 class="text-lg font-semibold mb-2">مكاتب محاماة موثوقة</h3>
          <p class="text-gray-600 mb-4">قائمة بأفضل مكاتب المحاماة</p>
          <button class="text-blue-600 hover:text-blue-700 font-medium">عرض المزيد</button>
        </a>

        <a href="/forex-fund-recovery" class="bg-blue-50 p-6 rounded-lg text-center hover:bg-blue-100 transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" stroke-width="2" width="24" height="24" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" fill="none" viewBox="0 0 24 24" class="w-12 h-12 mx-auto mb-4 text-blue-600">
            <path d="M16 20V4a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"></path>
            <rect width="20" height="14" x="2" y="6" rx="2"></rect>
          </svg>
          <h3 class="text-lg font-semibold mb-2">استرجاع أموال الفوركس</h3>
          <p class="text-gray-600 mb-4">دليل استرداد الأموال المفقودة</p>
          <button class="text-blue-600 hover:text-blue-700 font-medium">عرض المزيد</button>
        </a>
      </div>
    </div>
  </section>

  <section class="py-16 px-4 bg-red-50">
    <div class="max-w-6xl mx-auto">
      <h2 class="text-3xl font-bold text-red-900 mb-12">شركات تداول نصابة</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {scamCompanies.map((company) => (
          <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <div class="relative h-48">
              <img
                src={company.image}
                alt={company.name}
                class="w-full h-full object-contain p-4"
              />
            </div>
            <div class="p-6">
              <h3 class="text-xl font-bold text-red-600 mb-4">{company.name}</h3>
              <p class="text-gray-600 mb-4">{company.description}</p>
              <a
                href={`/article/${company.id}`}
                class="flex items-center justify-center w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700"
              >
                قراءة التحليل الكامل
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Trusted Law Firms Section -->
  <section class="py-16 px-4">
    <div class="max-w-6xl mx-auto">
      <div class="flex justify-between items-center mb-12">
        <h2 class="text-3xl font-bold">مكاتب محاماة موثوقة</h2>
        <a href="/trusted-law-firms" class="text-blue-600 hover:text-blue-700 font-medium flex items-center">
          عرض المزيد
          <svg xmlns="http://www.w3.org/2000/svg" stroke-width="2" width="24" height="24" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" fill="none" viewBox="0 0 24 24" class="w-5 h-5 mr-2">
            <path d="m12 19-7-7 7-7"></path>
            <path d="M19 12H5"></path>
          </svg>
        </a>
      </div>

      <div class="overflow-x-auto">
        <table class="w-full bg-white rounded-lg shadow">
          <thead class="bg-blue-900 text-white">
            <tr>
              <th class="px-6 py-4 text-right">اسم مكتب المحاماة</th>
              <th class="px-6 py-4 text-right">موقع المكتب</th>
              <th class="px-6 py-4 text-right">التقييم</th>
              <th class="px-6 py-4 text-right">عدد القضايا المنجزة</th>
              <th class="px-6 py-4 text-right">التفاصيل</th>
            </tr>
          </thead>
          <tbody>
            {trustedLawFirms.map((firm) => (
              <tr class="border-b">
                <td class="px-6 py-4">{firm.name}</td>
                <td class="px-6 py-4">{firm.location}</td>
                <td class="px-6 py-4">
                  <div class="flex items-center text-yellow-400">
                    {[...Array(firm.rating)].map(() => (
                      <svg xmlns="http://www.w3.org/2000/svg" stroke-width="2" width="24" height="24" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" fill="none" viewBox="0 0 24 24" class="w-4 h-4 fill-current">
                        <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
                      </svg>
                    ))}
                  </div>
                </td>
                <td class="px-6 py-4">{firm.casesCompleted}</td>
                <td class="px-6 py-4">
                  <a href={`/law-firm/${firm.id}`} class="text-blue-600 hover:text-blue-700 font-medium flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" stroke-width="2" width="24" height="24" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" fill="none" viewBox="0 0 24 24" class="w-4 h-4 mr-2">
                      <path d="m12 19-7-7 7-7"></path>
                      <path d="M19 12H5"></path>
                    </svg>
                    المزيد
                  </a>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>
  </section>

  <!-- Untrusted Law Firms Section -->
  <section class="py-16 px-4 bg-red-50">
    <div class="max-w-6xl mx-auto">
      <div class="flex justify-between items-center mb-12">
        <h2 class="text-3xl font-bold">مكاتب محاماة مشبوهة - احذر التعامل معها</h2>
        <a href="/untrusted-law-firms" class="text-red-600 hover:text-red-700 font-medium flex items-center">
          عرض المزيد
          <svg xmlns="http://www.w3.org/2000/svg" stroke-width="2" width="24" height="24" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" fill="none" viewBox="0 0 24 24" class="w-5 h-5 mr-2">
            <path d="m12 19-7-7 7-7"></path>
            <path d="M19 12H5"></path>
          </svg>
        </a>
      </div>

      <div class="overflow-x-auto">
        <table class="w-full bg-white rounded-lg shadow">
          <thead class="bg-red-900 text-white">
            <tr>
              <th class="px-6 py-4 text-right">اسم مكتب المحاماة</th>
              <th class="px-6 py-4 text-right">الموقع المزعوم</th>
              <th class="px-6 py-4 text-right">التحذيرات</th>
              <th class="px-6 py-4 text-right">التفاصيل</th>
            </tr>
          </thead>
          <tbody>
            {untrustedLawFirms.map((firm) => (
              <tr class="border-b">
                <td class="px-6 py-4 text-red-600 font-semibold">{firm.name}</td>
                <td class="px-6 py-4">{firm.location}</td>
                <td class="px-6 py-4 text-red-600">{firm.warnings}</td>
                <td class="px-6 py-4">
                  <a href={`/untrusted-law-firm/${firm.id}`} class="text-red-600 hover:text-red-700 font-medium flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" stroke-width="2" width="24" height="24" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" fill="none" viewBox="0 0 24 24" class="w-4 h-4 mr-2">
                      <path d="m12 19-7-7 7-7"></path>
                      <path d="M19 12H5"></path>
                    </svg>
                    المزيد
                  </a>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>
  </section>

  <!-- Articles Section -->
  <section class="bg-white py-16 px-4">
    <div class="max-w-6xl mx-auto">
      <div class="flex justify-between items-center mb-12">
        <h2 class="text-3xl font-bold">آخر الأخبار والتحديثات</h2>
        <a href="/articles" class="text-blue-600 hover:text-blue-700 font-medium">
          عرض المزيد
        </a>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {articles.slice(0, 3).map((article) => (
          <a href={`/article/${article.slug}`} class="bg-white rounded-lg shadow overflow-hidden hover:shadow-lg transition-shadow">
            <img src={article.image} alt={article.title} class="w-full h-48 object-cover" />
            <div class="p-6">
              <div class="flex items-center justify-between mb-2">
                <span class="text-sm text-blue-600">{article.category}</span>
                <span class="text-sm text-gray-500">{article.date}</span>
              </div>
              <h3 class="text-xl font-semibold mb-2">{article.title}</h3>
              <p class="text-gray-600">{article.excerpt}</p>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
</MainLayout>

<script>
  const heroSearchInput = document.getElementById('hero-search-input');
  if (heroSearchInput) {
    heroSearchInput.addEventListener('keypress', (e) => {
      if (e.key === 'Enter') {
        const query = (e.target as HTMLInputElement).value;
        if (query) {
          window.location.href = `/search?q=${encodeURIComponent(query)}`;
        }
      }
    });
  }
</script>
