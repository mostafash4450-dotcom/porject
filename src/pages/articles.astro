---
import MainLayout from '../layouts/MainLayout.astro';
import { articles } from '../data/articles';

const title = "المقالات - صياد الاحتيال";
const description = "أحدث المقالات والتحذيرات في مجال التداول والاستثمار وحماية المتداولين من عمليات الاحتيال";
---

<MainLayout title={title} description={description}>
  <div class="bg-white py-12">
    <div class="max-w-6xl mx-auto px-4">
      <h1 class="text-4xl font-bold mb-4 text-center">المقالات والتحديثات</h1>
      <p class="text-xl text-gray-600 mb-12 text-center max-w-3xl mx-auto">
        أحدث المقالات والتحذيرات في مجال التداول والاستثمار وحماية المتداولين من عمليات الاحتيال
      </p>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {articles.map((article) => (
          <a
            href={`/article/${article.slug}`}
            class="bg-white rounded-lg shadow overflow-hidden hover:shadow-lg transition-shadow"
          >
            <img
              src={article.image}
              alt={article.title}
              class="w-full h-48 object-cover"
            />
            <div class="p-6">
              <div class="flex items-center justify-between mb-2">
                <span class="text-sm text-blue-600">{article.category}</span>
                <span class="text-sm text-gray-500">{article.date}</span>
              </div>
              <h3 class="text-xl font-semibold mb-2">{article.title}</h3>
              <p class="text-gray-600">{article.excerpt}</p>
            </div>
          </a>
        ))}
      </div>
    </div>
  </div>
</MainLayout>
